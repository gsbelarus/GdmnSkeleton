<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- FAB -->
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_margin">@dimen/fab_compat_margin</item>-->
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="rippleColor">@color/fab_ripple</item>
    </style>


    <style name="App"/>
    <!-- Buttons -->
    <style name="App.Button" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <!--TODO -->
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="App.Button.Big">
        <item name="android:padding">12dp</item>
    </style>

    <style name="App.Button.Big.EmptyView" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="App.Button.Big.EmptyView.Light">
        <item name="colorButtonNormal">#40727272</item>
        <item name="android:textColor">#df000000</item>
    </style>

</resources>
