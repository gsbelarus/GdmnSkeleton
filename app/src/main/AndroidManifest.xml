<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gsbelarus.gedemin.skeleton">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".app.view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".app.view.activity.DetailActivity"
            android:label="Подробно"
            android:configChanges="orientation"/>

        <activity
            android:name=".app.view.activity.EditActivity"
            android:label="Изменить запись"/>

        <service
            android:name=".app.SyncService"
            android:exported="false" />
    </application>

</manifest>